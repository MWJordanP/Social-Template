{% for label, flashes in app.session.flashbag.all %}
    {% for flash in flashes %}
        <div class="component">
            <div class="alert alert-{{ label }}">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {{ flash }}
            </div>
        </div>
    {% endfor %}
{% endfor %}